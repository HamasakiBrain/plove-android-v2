<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="В этом разделе Вы сможете увидеть все свои покупки, начисленные и списанные баллы."
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="8dp"
            android:textSize="13dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПОНЯТНО"
            android:id="@+id/button"
            android:layout_below="@+id/itemTextView"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="История покупок в одном разделе"
            android:id="@+id/textView16"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="13.2dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>