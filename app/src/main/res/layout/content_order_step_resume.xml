<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.octarine.plove.order.OrderStepResumeActivity"
    tools:showIn="@layout/activity_order_step_resume">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/rl1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"
            android:id="@+id/rl3">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rl2"
            android:paddingRight="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="28dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/rl3"
            android:layout_height="60dp"
            android:background="#ffffff">

            <TextView
                android:text="875."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewBugPrice"
                android:layout_toRightOf="@+id/textView15"
                android:layout_marginLeft="10dp"
                style="@style/BagPrice"
                android:layout_centerVertical="false"
                android:paddingBottom="0dp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/textView22"
                style="@style/BagPriceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@+id/textViewBugPrice"
                android:paddingBottom="2dp"
                android:text=".00 RUB" />

            <TextView
                android:text="Оплатить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewOrder"
                android:layout_alignParentRight="true"
                style="@style/BagOrder"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp" />

            <TextView
                android:text="Итого:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                style="@style/BagItogo"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="2dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mandala"
            android:id="@+id/imageView9"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_below="@+id/rl2"
            android:layout_marginBottom="-40dp" />
    </RelativeLayout>

</RelativeLayout>
