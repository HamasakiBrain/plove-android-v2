<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowHistoryPosition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/textViewHistoryPositionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Плов"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textViewHistoryPositionCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="fill_vertical"
        android:text="20 шт"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="13.2dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textViewHistoryPositionPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|fill_vertical"
        android:text="2340 руб"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="13.2dp" />

</LinearLayout>

